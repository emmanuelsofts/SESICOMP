@model WebApplication4.Models.Email

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Email</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Email_student" />
            <div class="form-group">
                <label asp-for="Email_type" class="control-label"></label>
                <select asp-for="Email_type" class="form-control">
                    <option>School</option>
                    <option>Business</option>
                    <option>Home</option>
                </select>
                <span asp-validation-for="Email_type" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Created_on" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
